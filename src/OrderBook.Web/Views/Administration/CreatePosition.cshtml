@model CreatePositionViewModel
@{
    ViewBag.Title = "Stwórz nowe stanowisko";
}

<h2 class="pt-3 mb-3">@ViewBag.Title</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="form-group text-danger validation-summary-unstyled"></div>
    <div class="form-group row">
        <div class="col-md-4">
            <label asp-for="PositionName"></label>
            <input asp-for="PositionName" class="form-control">
            <span asp-validation-for="PositionName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <a asp-controller="Administration" asp-action="ListPositions" class="btn btn-secondary mr-1">Wróć</a>

            <button type="submit" class="btn btn-primary">Stwórz</button>
        </div>
    </div>
</form>