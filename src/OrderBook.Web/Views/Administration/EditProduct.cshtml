@model EditProductViewModel
@{
    ViewBag.Title = "Edytuj produkt";
}

<h2 class="pt-3 mb-3">@ViewBag.Title</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-unstyled"></div>
    <div class="form-row">
        <div class="form-group col-md-6 col-lg-3">
            <label asp-for="ProductName"></label>
            <input asp-for="ProductName" class="form-control">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 col-lg-3">
            <label asp-for="ProductCategoryId"></label>
            <select asp-for="ProductCategoryId" asp-items="Model.ProductCategorySelectList" class="custom-select">
                <option value="">Wybierz kategorię</option>
            </select>
            <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6 col-lg-3">
            <label asp-for="ProductPrice"></label>
            <input asp-for="ProductPrice" class="form-control">
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 col-lg-3">
            <label asp-for="ProductCurrency"></label>
            <input asp-for="ProductCurrency" class="form-control">
            <span asp-validation-for="ProductCurrency" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4 col-lg-3">
            <label asp-for="AllegroOfferId"></label>
            <input asp-for="AllegroOfferId" class="form-control">
            <span asp-validation-for="AllegroOfferId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <a asp-controller="Administration" asp-action="ListProducts" class="btn btn-secondary mr-1">Wróć</a>

            <button type="submit" class="btn btn-primary">Edytuj</button>
        </div>
    </div>
</form>