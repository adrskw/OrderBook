@{
    ViewBag.Title = "Logowanie";
}
<div class="container justify-content-center h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="card border-light my-auto h-auto">
            <div class="card-body">
                <h3 class="card-title text-center text-uppercase">
                    Obsługa Zamówień
                    <br>
                    <span class="text-muted h4">nazwa firmy</span>
                </h3>
                <hr>
                <div class="d-flex form-container justify-content-center">
                    <form>
                        <div class="form-group">
                            <div class="input-group">
                                <input name="login" class="form-control" placeholder="login" type="text">
                                <div class="input-group-append">
                                    <span class="input-group-text"> <i class="fas fa-user"></i> </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input name="password" class="form-control" placeholder="hasło" type="password">
                                <div class="input-group-append">
                                    <span class="input-group-text"> <i class="fas fa-key"></i> </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input name="rememberMe" class="custom-control-input" type="checkbox" id="rememberMe">
                                <label class="custom-control-label" for="rememberMe">Zapamiętaj mnie</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Zaloguj</button>
                        </div>
                        <div class="text-right">
                            <a href="#" class="btn">Zapomniałeś hasła?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>